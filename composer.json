{
    "name": "xyu/heroku-wp",
    "config": {
        "vendor-dir": "tmp/vendor"
    },
    "require": {
        "hhvm": "~3.2",
        "WordPress/WordPress": "*",
        "wpackagist-plugin/jetpack": "~3",
        "wpackagist-plugin/wpro": "~1",
        "wpackagist-plugin/sendgrid-email-delivery-simplified": "~1",
        "wpackagist-plugin/authy-two-factor-authentication": "~2"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "WordPress/WordPress",
                "type": "webroot",
                "version": "4.1",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.1.zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "~1.1"
                }
            }
        },
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        }
    ],
    "extra": {
        "webroot-dir": "tmp/public.composer",
        "webroot-package": "WordPress/WordPress",
        "installer-paths": {
            "tmp/public.composer/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "tmp/public.composer/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "tmp/public.composer/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf tmp/public.building tmp/public.old",
            "mkdir tmp/public.building",
            "cp -R tmp/public.composer/* tmp/public.building",
            "cp -R public/* tmp/public.building",
            "touch public.built",
            "mv public.built tmp/public.old && mv tmp/public.building public.built",
            "rm -rf tmp/public.old"
        ]
    }
}
